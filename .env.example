#
# Copy this file to .env and fill in your values
# WARNING: Never commit .env to version control!

# Flask Configuration
FLASK_APP=src.api.endpoints
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET_KEY=change-this-to-a-random-secret-key

# Runtime Configuration
MAYA_ENABLE_ETHICS_CHECKS=true
MAYA_REQUIRE_HUMAN_APPROVAL=true
MAYA_MAX_ITERATIONS=1000
MAYA_LOG_LEVEL=INFO

# TPM Configuration (optional)
TPM_ENABLED=false
TPM_DEVICE=/dev/tpm0

# Database Configuration (if needed)
DATABASE_URL=sqlite:///maya_node.db

# Network Configuration
P2P_ENABLED=false
P2P_PORT=8333
P2P_BOOTSTRAP_NODES=

# Ledger Configuration
LEDGER_PATH=./data/ledger
LEDGER_BACKUP_ENABLED=true

# Storage Configuration
STORAGE_PATH=./data/storage
STORAGE_BACKUP_ENABLED=true

# API Configuration
API_HOST=127.0.0.1
API_PORT=5000
API_CORS_ENABLED=true
API_RATE_LIMIT=100

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here

# Development
DEV_MODE=true
TESTING=false
