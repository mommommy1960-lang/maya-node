# EditorConfig - Consistent coding styles across editors and IDEs
# See https://editorconfig.org for more information

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript and TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Makefiles require tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Configuration files
[.{babelrc,eslintrc,prettierrc}]
indent_size = 2

# Package.json and similar
[{package.json,*.lock}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS and SCSS
[*.{css,scss,sass}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# INI files
[*.ini]
indent_size = 4
